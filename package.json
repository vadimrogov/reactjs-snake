{
  "name": "react-stay-in-view",
  "version": "1.1.9",
  "license": "MIT",
  "description": "A react hook and component to create popper (popover) that never leave the screen.",
  "author": "Vadim Rogov <vadimrogovd@gmail.com>",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "husky install",
    "build": "rimraf dist && rollup -c",
    "lint": "eslint 'src/**/*.{ts,tsx,js,jsx}'",
    "lint:fix": "yarn lint --fix",
    "prettier:check": "prettier --check 'src/**/*'",
    "prettify": "prettier --write 'src/**/*'",
    "ts-check": "tsc -p tsconfig.json --noEmit"
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vdmrgv/react-stay-in-view.git"
  },
  "keywords": [
    "react",
    "react-hooks",
    "react-component",
    "stay in view",
    "scroll",
    "scrolling",
    "resize",
    "avoid end of screen",
    "screen",
    "popup",
    "popper",
    "popover",
    "portal"
  ],
  "bugs": {
    "url": "https://github.com/vdmrgv/react-stay-in-view/issues"
  },
  "homepage": "https://github.com/vdmrgv/react-stay-in-view#readme",
  "devDependencies": {
    "@babel/core": "^7.19.6",
    "@babel/preset-env": "^7.19.4",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@rollup/plugin-babel": "^6.0.2",
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^9.0.2",
    "@types/react": "^18.0.24",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^3.2.4",
    "rollup-plugin-dts": "^5.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2.4.1",
    "typescript": "^4.8.4"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  }
}